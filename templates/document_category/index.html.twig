{% extends 'base.html.twig' %}

{% block title %}DocumentCategory index{% endblock %}

{% block body %}
    <h1>DocumentCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document_category in document_categories %}
            <tr>
                <td>{{ document_category.id }}</td>
                <td>{{ document_category.name }}</td>
                <td>
                    <a href="{{ path('app_document_category_show', {'id': document_category.id}) }}">show</a>
                    <a href="{{ path('app_document_category_edit', {'id': document_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_document_category_new') }}">Create new</a>
{% endblock %}
